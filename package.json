{
  "name": "awslambda-nodejs-starter",
  "version": "1.0.0",
  "description": "A starter for an AWS Lambda built with Node.js, prepared with care, love and industry best practices",
  "main": "src/app.js",
  "scripts": {
    "checkstyle": "eslint src test | snazzy",
    "checkstyle:fix": "eslint src test --fix",
    "test": "mocha test/**/**.spec.js",
    "build:sam": "sam build --template sam/template.yml",
    "build:zip": "lambda-zipper build -f src -o target/app.zip",
    "invoke:local": "cd sam && sam local invoke -t template.yml -e sample-event.json ",
    "preinvoke:local": "npm run build:sam",
    "pretest": "npm run checkstyle",
    "prebuild:sam": "npm run test",
    "prebuild:zip": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "TBD"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "snazzy": "^8.0.0",
    "lambda-zipper": "0.4.1"
  },
  "author": "udalovas",
  "license": "ISC"
}
